<div class="container-fluid d-flex p-0 align-items-center">
  <div class="form">
    <div class="col-4 m-auto">
      <h2 class="text-center">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>


          <div class="form-group">
            <%= f.input :name, required: true, autofocus: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
          </div>



          <div class="form-group">
            <%= f.input :username, required: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
          </div>


        <div class="form-group">
          <%= f.input :email, required: true , input_html: { class: "form-control"}, wrapper: false, label_html: { class: "label" } %>
        </div>



        <div class="form-group">
          <%= f.input :password, required: true , input_html: { class: "form-control "}, wrapper: false, label_html: { class: "label" } %>
        </div>


        <div class="form-group">
          <%= f.input :password_confirmation, required: true, input_html: { class: "form-control"}, wrapper: false, label_html: { class: "label"} %>
        </div>


        <%= f.button :submit, "Sign up", class:"button is-info is-medium" %>
      <% end %>






      <%= render "devise/shared/links" , class: "m-2"%>
    </div>
  </div>
  <%= image_tag "signup.jpg", class: "col-6 p-0 vh-100" %>
</div>


