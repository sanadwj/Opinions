
<div id="feed" class="list-group ml-3 pr-5">
  <% @opinions.each do | opinion | %>
  <div  class="list-group-item list-group-item-action my-1 rounded ">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1"><%= link_to  opinion.user.name, user_path(opinion.user.id), remote: true%></h5>
      <hr>
      <small><%= opinion.created_at.strftime('%c') %></small>
    </div>
    <p class="mb-1"><%= opinion.body %></p>
    <small > <button type="button" class="btn btn-secondary btn-sm" ><%= link_to 'Edit', edit_opinion_path(opinion), class: 'text-white' %></button></small>
    <small> <button type="button" class="btn btn-outline-danger btn-sm"><%= link_to 'Destroy', opinion, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-dark' %></button></small>
  </div>
 <% end %>
</div>
